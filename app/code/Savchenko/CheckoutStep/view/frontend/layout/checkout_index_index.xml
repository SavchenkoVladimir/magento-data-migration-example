<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <!-- The new step you add -->
                                        <item name="summary" xsi:type="array">
                                            <item name="component" xsi:type="string">Savchenko_CheckoutStep/js/view/summary</item>
                                            <item name="displayArea" xsi:type="string">summary</item>
                                                <item name="sortOrder" xsi:type="string">30</item>
                                            <item name="children" xsi:type="array">
                                                <item name="shipping-summary" xsi:type="array">
                                                    <item name="component" xsi:type="string">Savchenko_CheckoutStep/js/view/summary/shipping</item>
                                                    <item name="displayArea" xsi:type="string">summary</item>
                                                    <item name="sortOrder" xsi:type="string">10</item>
                                                </item>
                                                <item name="payment-summary" xsi:type="array">
                                                    <item name="component" xsi:type="string">Savchenko_CheckoutStep/js/view/summary/payment</item>
                                                    <item name="displayArea" xsi:type="string">summary</item>
                                                    <item name="sortOrder" xsi:type="string">20</item>
                                                </item>
                                                <item name="quote-items-summary" xsi:type="array">
                                                    <item name="component" xsi:type="string">Savchenko_CheckoutStep/js/view/summary/quote-items</item>
                                                    <item name="displayArea" xsi:type="string">summary</item>
                                                    <item name="sortOrder" xsi:type="string">30</item>
                                                </item>
                                                <item name="buttons-set" xsi:type="array">
                                                    <item name="component" xsi:type="string">Savchenko_CheckoutStep/js/view/summary/buttons-set</item>
                                                    <item name="displayArea" xsi:type="string">summary</item>
                                                    <item name="sortOrder" xsi:type="string">40</item>
                                                    <item name="children" xsi:type="array">
                                                        <item name="messages" xsi:type="array">
                                                            <item name="sortOrder" xsi:type="string">0</item>
                                                            <item name="component" xsi:type="string">Magento_Ui/js/view/messages</item>
                                                            <item name="displayArea" xsi:type="string">summary</item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>